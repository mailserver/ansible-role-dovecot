service imap-login {
  inet_listener imap {
    address = "{{listen.v4}},[{{listen.v6}}]"
    port = 143
  }
  inet_listener imaps {
    port = 993
  }
}

service lmtp {
 unix_listener {{lmtp_socket_path}} {
   mode = 0660
   user = {{lmtp_socket_owner}} 
   group = {{lmtp_socket_group}} 
  }
}

